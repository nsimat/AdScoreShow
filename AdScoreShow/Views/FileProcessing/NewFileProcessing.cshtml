@model AdScoreShow.Models.AdvertisementViewModel

@{
    ViewBag.Title = "NewFileProcessing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Uploading a CSV file to seed database</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>AdvertisementViewModel</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UpLoadedCsvFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.TextBoxFor(model => model.UpLoadedCsvFile, "", new { @type = "file" })
                @Html.ValidationMessageFor(model => model.UpLoadedCsvFile, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Process the CSV File" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
