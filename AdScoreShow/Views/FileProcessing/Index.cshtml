@model AdScoreShow.Models.UploadCsvFileViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to the CSV database application</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
